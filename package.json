{
  "name": "computepod-majordomo-ui",
  "version": "1.0.0",
  "description": "A web interface to the ComputePods MajorDomo tool",
  "main": "index.js",
  "mcv": "./mcv/mcv.html",
  "directories": {
    "doc": "docs"
  },
  "alias": {
    "ajv": "~/node_modules/ajv",
    "bulma": "~/node_modules/bulma/bulma.sass",
    "eStatic": "~/externalStatic",
    "codeJar": "~/node_modules/codejar",
    "mithril": "~/node_modules/mithril",
    "msw": "~/node_modules/msw"
  },
  "scripts": {
    "createMCVapp": "node ./mcv/createMCVapp.js",
    "test": "ava --verbose --watch",
    "mcvClient": "parcel serve './mcv/mcv.html' --log-level verbose --dist-dir distMCV",
    "mcvServer": "parcel serve './mcv/mcv.html' --log-level verbose --target mcv --dist-dir distMCV",
    "devClient": "npm-run-all -r -p createMCVapp mcvClient",
    "devServer": "npm-run-all -r -p createMCVapp mcvServer",
    "start": "parcel serve",
    "build": "parcel build"
  },
  "targets": {
  	"mcv": {
  	  "distDir"  : "./distMCV",
  		"publicUrl": "/clientApp"
  	}
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/computePods/computePodMajorDomoUI.git"
  },
  "author": "Stephen Gaito",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/computePods/computePodMajorDomoUI/issues"
  },
  "homepage": "https://github.com/computePods/computePodMajorDomoUI#readme",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.0.0-nightly.713",
    "ava": "^3.15.0",
    "jsdom": "^16.6.0",
    "mithril-query": "^4.0.0-next.2",
    "msw": "^0.28.2",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-beta.3.1",
    "sass": "~1.32.13",
    "sinon": "^11.1.1",
    "squirrelly": "^8.0.8"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "ajv": "^8.6.0",
    "bulma": "^0.9.2",
    "codejar": "^3.4.0",
    "mithril": "^2.0.4",
    "split.js": "^1.6.4",
    "yaml": "^1.10.2"
  },
  "msw": {
    "workerDirectory": "distMCV"
  }
}
